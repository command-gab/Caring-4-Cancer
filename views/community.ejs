<body>
  <div class="container">
          <header>
              <nav>
                  <ul>
                      <img src="/images/logo3.png" class="logo">
  
                      <li><a href="/">HOME</a></li>
                      <li><a href="/profile">PROFILE</a></li>
                      <li><a href="/events">EVENTS</a></li>
                      <li><a href="/about">ABOUT</a></li>
                  </ul>
  
                  <a href="/logout" id="logout">LOG OUT</a>

              </nav>
          </header>

    <main>
      <img src="/images/community.png" class="community">

      <form action="/search" class="form" method="GET">
        <input type="text" placeholder="Search" name="search" />
        <button type="submit">Explore</button>
    </form>
    
        <ul class="discussionPosts">
        <% for(let i=0; i<posts.length; i++) {%>
          <li class="message">
            <!-- <a href="/post/<%= posts[i]._id %>"> -->
            <span class="title"><a href="/post/<%= posts[i]._id %>"><strong><%= posts[i].title %></strong></span></a>
            <span class="msg"><%= posts[i].msg %></span>
            <span class="posted">Posted by @<%= posts[i].name %></span><br>
            <span class="num"><%= posts[i].heart %> HEARTS</span>
            <span><i class="fa fa-heart fa-2x" aria-hidden="true" data-id="<%= posts[i]._id %>"></i></span>
          </li>
        <% } %>
        </ul>

        <section id="share">
        <h2>Share your message</h2>
      <% if (user.local.email) { %>
        <form action="/discussion" method="POST">
          <input type="text" placeholder="Title" class="titInput" name="title" required>
          <input type="text" placeholder="What's on your mind?" class="msgInput" name="msg">
          <input type="text" value="<%= user.local.email %>" class="nameInput" name="name">
          <button type="submit" class="submitPost">Post</button>
        </form>
        </section>
      <% } %>
    </main>
</div>

